extends layout

block content

  script(src="/javascripts/jquery-1.6.4.min.js")
  script(src="/javascripts/view.index.js")

  input#ora

  #left-column.column
    h2 Seleziona pagina
    ul#heroes
      each hero in heroes
        li(class='hero-name')
          a(href='#') #{hero}

  #right-column.column
    
    ul#feedback
    p(id="RadiatoriA")
      table(title="Circuito_radiatori_fascia_A")
        tr
          td 
          label(id="Title") Circuito radiatori fascia A:
        tr
          td 
            label(id="labelRad") A1 ON
            input(type="time", id='RadiatoriA1ON')#select-time
          td 
            label(id="labelRad") A1 OFF
            input(type="time", id='RadiatoriA1OFF')#select-time
        tr
          td 
            label(id="labelRad") A2 ON
            input(type="time", id='RadiatoriA1ON')#select-time
          td 
            label(id="labelRad") A2 OFF
            input(type="time", id='RadiatoriA2OFF')#select-time
        tr
          td 
            label(id="labelRad") A3 ON
            input(type="time", id='RadiatoriA3ON')#select-time
          td 
            label(id="labelRad") A3 ON
            input(type="time", id='RadiatoriA3OFF')#select-time
    a(id='add-new-fact', href='#') Invia
    input#value